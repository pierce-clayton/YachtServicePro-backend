<p id="notice"><%= notice %></p>

<h1>Checkout Sessions</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Customer</th>
      <th>Stripe mode</th>
      <th>Success url</th>
      <th>Cancel url</th>
      <th>Payment intent</th>
      <th>Payment status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checkout_sessions.each do |checkout_session| %>
      <tr>
        <td><%= checkout_session.price_id %></td>
        <td><%= checkout_session.customer_id %></td>
        <td><%= checkout_session.stripe_mode %></td>
        <td><%= checkout_session.success_url %></td>
        <td><%= checkout_session.cancel_url %></td>
        <td><%= checkout_session.payment_intent %></td>
        <td><%= checkout_session.payment_status %></td>
        <td><%= link_to 'Show', checkout_session %></td>
        <td><%= link_to 'Edit', edit_checkout_session_path(checkout_session) %></td>
        <td><%= link_to 'Destroy', checkout_session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

