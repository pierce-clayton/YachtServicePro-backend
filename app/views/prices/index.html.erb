<p id="notice"><%= notice %></p>

<h1>Prices</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Unit amount</th>
      <th>Stripe Type</th>
      <th>Recurring interval</th>
      <th>Recurring count</th>
      <th>Stripe ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.product_id %></td>
        <td><%= price.unit_amount %></td>
        <td><%= price.stripe_type %></td>
        <td><%= price.recurring_interval %></td>
        <td><%= price.recurring_count %></td>
        <td><%= price.stripe_id %></td>
        <td><%= link_to 'Show Product', [@product] %></td>
        <td><%= link_to 'Edit Price', edit_product_price_path(@product, price) %></td>
        <td><%= link_to 'Destroy', [@product, price], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Price', new_product_price_path(@product) %>
